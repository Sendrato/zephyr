			label = "FLASH_IAP";
			reg = <0x40009000 0xFF4>;
			#address-cells = <1>;
			#size-cells = <1>;
			flash0: flash@0 {
				compatible = "soc-nv-flash";
				label = "MCUX_FLASH";
				reg = <0 DT_SIZE_K(640)>;
				erase-block-size = <512>;
