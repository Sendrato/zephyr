        // 27: Flexcomm Interface 0 (USART0, FLEXCOMM0)
		flexcomm0: flexcomm@4008b000 {
			compatible = "nxp,lpc-flexcomm";
			reg = <0x4008B000 0x1000>;
			interrupts = <11 0>;
			clocks = <&syscon MCUX_FLEXCOMM0_CLK>;
			label = "FLEXCOMM_0";
			status = "disabled";
		};

